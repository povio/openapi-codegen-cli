import { {{restClientName}} } from "{{restClientImportFrom}}";
import {
    {{! Zod schemas imports }}
    {{#each zodSchemaImports as | zodSchemaImport |}}
    {{zodSchemaImport}},
    {{/each}}
     {{! Infered zod schemas types imports }}
    {{#each zodSchemaTypeImports as | zodSchemaTypeImport |}}
    {{zodSchemaTypeImport}},
    {{/each}}
} from "./zod-schemas";
{{! Zod import }}
{{#if hasZodImport}}
import { z } from "zod";
{{/if}}

{{! Endpoints export }}
{{#each endpoints as | endpoint |}}
export const {{getEndpointName endpoint}} = ({{{generateEndpointParams endpoint}}}) => { 
    return {{../restClientName}}.{{endpoint.method}}( 
        {{! Response }}
        { resSchema: {{endpoint.response}} }, 
        {{! Path }}
        `{{getEndpointPath endpoint}}`,
        {{! Body }}
        {{#with (getEndpointBody endpoint) as | endpointBody |}}
        {{#if endpointBody}}{{endpointBody.name}}, {{/if}}
        {{/with}}
        {{! Config }}
        {{{generateEndpointConfig endpoint}}}
    )
};

{{/each}}